@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Abaya</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Abaya.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<style>
    :root {
        --dark-brown: #4e342e;
        --medium-brown: #6d4c41;
        --soft-beige: #f5ebe0;
        --accent-color: #d4a373;
    }

    .navbar {
        background-color: #ffffff !important;
        border-bottom: 1px solid var(--soft-beige);
        padding: 12px 0;
    }

    .navbar-brand {
        font-weight: 800;
        color: var(--dark-brown) !important;
    }

    .nav-link {
        color: var(--dark-brown) !important;
        font-weight: 500;
        transition: 0.3s;
    }

        .nav-link:hover {
            color: var(--accent-color) !important;
        }

    .btn-main {
        background-color: var(--medium-brown);
        color: white;
        border-radius: 20px;
        padding: 5px 20px;
        border: none;
    }

        .btn-main:hover {
            background-color: var(--dark-brown);
            color: white;
        }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                   ARYAM <span style="color: #d4a373;">ABAYA</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Collection</a></li>

                        @* فحص حالة تسجيل الدخول *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    Hello, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="User" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Login">Login</a></li>
                            <li class="nav-item">
                                <a class="btn btn-main btn-sm ms-lg-3" asp-controller="User" asp-action="Register">Join Now</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            @{
                // كود صغير لحساب عدد القطع في السلة حالياً
                var cartJson = HttpContextAccessor.HttpContext.Session.GetString("Cart");
                var cartCount = 0;
                if (!string.IsNullOrEmpty(cartJson))
                {
                    var cart = JsonConvert.DeserializeObject<List<Abaya.Models.CartItem>>(cartJson);
                    cartCount = cart.Sum(x => x.Quantity);
                }
            }

            <li class="nav-item me-3">
                <a class="nav-link position-relative d-inline-block" asp-controller="Cart" asp-action="Index">
                    <i class="bi bi-bag-fill" style="color: #4e342e !important; font-size: 1.5rem; display: inline-block;"></i> @* أيقونة شنطة بقلب تناسب العبايات *@
                    @if (cartCount > 0)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                              style="font-size: 0.65rem; padding: 0.35em 0.5em;">
                            @cartCount
                        </span>
                    }
                </a>
            </li>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="mt-5 pt-5 pb-4" style="background-color: #4e342e; color: #fdfaf5;">
        <div class="container text-center text-md-start">
            <div class="row">
                <div class="col-md-4 col-lg-4 col-xl-3 mx-auto mb-4">
                    <h5 class="text-uppercase fw-bold mb-4" style="color: #d4a373;">ABAYA BOUTIQUE</h5>
                    <p>Your premier destination for elegance and luxury. We offer the latest Khaleeji and Oriental abaya designs crafted from the finest fabrics.</p>
                    <div class="mt-4">
                        <a href="#" class="text-reset me-3 fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-reset me-3 fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-reset me-3 fs-5"><i class="bi bi-whatsapp"></i></a>
                    </div>
                </div>

                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                    <h6 class="text-uppercase fw-bold mb-4 border-bottom pb-2">Useful Links</h6>
                    <p><a asp-controller="Home" asp-action="Index" class="text-reset text-decoration-none hover-gold">Home</a></p>
                    <p><a asp-controller="Products" asp-action="Index" class="text-reset text-decoration-none hover-gold">All Collections</a></p>
                    <p><a href="#" class="text-reset text-decoration-none hover-gold">Exchange Policy</a></p>
                    <p><a href="#" class="text-reset text-decoration-none hover-gold">Privacy Policy</a></p>
                </div>

                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                    <h6 class="text-uppercase fw-bold mb-4 border-bottom pb-2">Contact Us</h6>
                    <p><i class="bi bi-geo-alt me-2"></i> Amman, Jordan</p>
                    <p><i class="bi bi-envelope me-2"></i> info@abayastore.com</p>
                    <p><i class="bi bi-phone me-2"></i> +962 79 000 0000</p>
                </div>
            </div>
        </div>

        <div class="text-center p-3 border-top mt-4" style="background-color: rgba(0, 0, 0, 0.1); font-size: 0.9rem;">
            © @DateTime.Now.Year All Rights Reserved:
            <span class="fw-bold" style="color: #d4a373;">Abaya Boutique</span>
        </div>
    </footer>

    <style>
        .hover-gold:hover {
            color: #d4a373 !important;
            transition: 0.3s;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>


