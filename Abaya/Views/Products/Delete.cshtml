@model Abaya.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5 text-center">
    <div class="mx-auto p-5 shadow-sm rounded-5 border bg-white" style="max-width: 500px;">
        <div class="text-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
        </div>
        <h3 class="fw-bold mb-3">Are you sure?</h3>
        <p class="text-muted mb-4">You are about to delete <strong>@Model.Name</strong>. This action cannot be undone.</p>

        <div class="mb-4">
            <img src="@Model.ImageUrl" width="150" class="rounded-4 border" />
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center gap-3">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
                <button type="submit" class="btn btn-danger rounded-pill px-4">Yes, Delete It</button>
            </div>
        </form>
    </div>
</div>