@model Abaya.Models.Product

@{
    ViewData["Title"] = "Add New Product";
}

<style>
    body { background-color: #fdfaf5; }
    .form-container {
        max-width: 600px;
        background: white;
        border-radius: 25px;
        box-shadow: 0 10px 30px rgba(93, 64, 55, 0.08);
        border: 1px solid #eee2d9;
    }
    .text-brown-dark { color: #5d4037; }
    .btn-save {
        background-color: #6d4c41;
        color: white;
        border-radius: 15px;
        padding: 10px 30px;
        border: none;
        transition: 0.3s;
    }
    .btn-save:hover { background-color: #4e342e; color: white; transform: translateY(-2px); }
    .form-control {
        border-radius: 12px;
        border: 1px solid #e3d5ca;
        background-color: #faf7f5;
    }
    .form-control:focus {
        border-color: #8d6e63;
        box-shadow: 0 0 0 0.25rem rgba(141, 110, 99, 0.1);
    }
</style>

<div class="container py-5">
    <div class="form-container mx-auto p-4 p-md-5">
        <h2 class="text-brown-dark fw-bold mb-4 text-center">Add New Abaya</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold text-muted">Product Name</label>
                <input asp-for="Name" class="form-control" placeholder="e.g. Silk Black Abaya" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label fw-bold text-muted">Price (JOD)</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-bold text-muted">Front Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl_Back" class="form-label fw-bold text-muted">Back Image URL (Optional)</label>
                <input asp-for="ImageUrl_Back" class="form-control" placeholder="https://..." />
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-bold text-muted">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-action="Index" class="text-muted text-decoration-none small">← Back to List</a>
                <button type="submit" class="btn btn-save shadow-sm">Save Product</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}