@model Abaya.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<style>
    body { background-color: #fdfaf5; }
    .form-container {
        max-width: 600px;
        background: white;
        border-radius: 25px;
        box-shadow: 0 10px 30px rgba(93, 64, 55, 0.08);
        border: 1px solid #eee2d9;
    }
    .text-brown-dark { color: #5d4037; }
    .btn-update {
        background-color: #d4a373; /* لون ذهبي دافئ للتعديل */
        color: white;
        border-radius: 15px;
        padding: 10px 30px;
        border: none;
        transition: 0.3s;
    }
    .btn-update:hover { background-color: #c49263; color: white; transform: translateY(-2px); }
    .form-control { border-radius: 12px; border: 1px solid #e3d5ca; background-color: #faf7f5; }
    .current-img-preview { border-radius: 15px; border: 2px solid #soft-beige; margin-bottom: 15px; object-fit: cover; }
</style>

<div class="container py-5">
    <div class="form-container mx-auto p-4 p-md-5">
        <h2 class="text-brown-dark fw-bold mb-4 text-center">Edit Abaya Details</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="text-center mb-4">
                <p class="small text-muted mb-2">Current Image Preview</p>
                <img src="@Model.ImageUrl" width="120" height="120" class="current-img-preview shadow-sm" />
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold text-muted">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label fw-bold text-muted">Price (JOD)</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-bold text-muted">Front Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl_Back" class="form-label fw-bold text-muted">Back Image URL</label>
                <input asp-for="ImageUrl_Back" class="form-control" />
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-action="Index" class="text-muted text-decoration-none small">Cancel</a>
                <button type="submit" class="btn btn-update shadow-sm">Update Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}